<div class="card-body">
    <h4 class="card-title">Basic form elements</h4>
    <p class="card-description">
        Basic form elements
    </p>
    <form class="forms-sample" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">

            <label asp-for="Title1" asp-action="Index"></label>
