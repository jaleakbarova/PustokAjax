        </div>
       
        <div class="form-group">
            <label asp-for="ImageFile" asp-action="Index"></label>
            <input asp-for="ImageFile" class="form-control" placeholder="Image ">
            <span asp-validation-for="ImageFile"></span>
            
        </div>     
      
